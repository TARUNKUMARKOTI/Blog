<%- include("partials/header")%>

<h1>Home</h1>
<p><%= homePara %></p>
<!-- <h1>Posts</h1> -->
<% posts.forEach(function(post) { %>
  <h3><%= post.title %></h3>
  <% if (post.content.length > 100) { %>
  <p><%= post.content.substring(0, 100) + "..." %><a href="/posts/<%=post._id%>">Read More</a></p>
  <% } else { %>
    <p><%= post.content %></p>
  <% } %>
<% }) %>
